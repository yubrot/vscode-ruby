{
	"name": "language-server-ruby",
	"version": "0.28.1",
	"description": "Language server for Ruby",
	"repository": "https://github.com/rubyide/vscode-ruby",
	"author": "Stafford Brunk <stafford.brunk@gmail.com>",
	"license": "MIT",
	"private": false,
	"main": "dist/index.js",
	"dependencies": {
		"cross-spawn": "^6.0.5",
		"diff-match-patch": "^1.0.4",
		"loglevel": "^1.6.7",
		"rxjs": "^6.4.0",
		"vscode-languageserver": "^7.0.0",
		"vscode-languageserver-textdocument": "^1.0.1",
		"vscode-uri": "^3.0.2",
		"web-tree-sitter": "^0.20.8",
		"web-tree-sitter-ruby": "^0.19.0"
	},
	"devDependencies": {
		"@types/chai": "^4.2.5",
		"@types/cross-spawn": "^6.0.0",
		"@types/diff-match-patch": "^1.0.32",
		"@types/mocha": "^5.2.7",
		"@typescript-eslint/eslint-plugin": "^2.8.0",
		"@typescript-eslint/parser": "^2.8.0",
		"chai": "^4.2.0",
		"esbuild": "^0.14.10",
		"eslint": ">=6.6.0",
		"eslint-config-prettier": "^6.7.0",
		"eslint-config-standard": "^14.1.0",
		"eslint-config-standard-with-typescript": "^11.0.1",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-node": "^10.0.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"mocha": "^8.4.0",
		"nyc": "^15.1.0",
		"prettier": "^1.19.1",
		"source-map-support": "^0.5.16",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4"
	},
	"scripts": {
		"lint": "eslint src/**/*.ts",
		"test": "nyc mocha -r ts-node/register -r source-map-support/register -r spec/hooks.js spec/**/*.ts",
		"build": "NODE_ENV=production node esbuild.js",
		"compile": "node esbuild.js",
		"watch": "ESBUILD_WATCH=true node esbuild.js"
	},
	"nyc": {
		"cache": false,
		"extension": [
			".ts"
		],
		"exclude": [
			"**/*.d.ts",
			"coverage/**",
			"packages/*/test/**",
			"spec/**",
			"spec{,-*}.ts",
			"**/*{.,-}{test,spec}.ts",
			"**/node_modules/**",
			"esbuild.js"
		],
		"reporter": [
			"text",
			"lcov"
		],
		"all": true
	}
}
